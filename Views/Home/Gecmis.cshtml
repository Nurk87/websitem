@model List<MyTodoList.Models.TodoItem>
@{
    Layout = null; /* Layout hatası vermesin diye null yapıyoruz */
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Geçmiş</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');
        /* SENİN ORİJİNAL CSS KODLARIN (DOKUNMADIM) */
        .tum-sayfa {
            background-color: #fdfbf7;
            min-height: 100vh;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            font-family: 'Nunito', sans-serif;
        }

        .beyaz-kart {
            background: white;
            border-radius: 30px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.03);
        }

        /* Tablo içi düzenlemeler */
        .form-check-input {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="tum-sayfa">
        <div class="container mt-4" style="max-width: 800px;">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 style="color: #555;">Geçmiş</h2>
                <a href="/Home/Index" class="btn btn-sm btn-outline-secondary rounded-pill">← Geri Dön</a>
            </div>

            <div class="beyaz-kart">
                <form asp-action="TopluSilGecmis" method="post">

                    @if (Model != null && Model.Count > 0)
                    {
                        <button type="submit" class="btn btn-danger btn-sm mb-3 rounded-pill px-3" onclick="return confirm('Seçilenler kalıcı olarak silinsin mi?')">
                            Seçilenleri Sil 🗑
                        </button>
                    }

                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="30">Seç</th>
                                <th>Tarih & Saat</th>
                                <th>Görev</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><input type="checkbox" name="silinecekIds" value="@item.Id" class="form-check-input"></td>

                                        <td class="text-muted small">
                                            📅 @(item.TamamlanmaTarihi.HasValue? item.TamamlanmaTarihi.Value.ToString("dd MMMM HH:mm") : "Tarih Yok")
                                        </td>

                                        <td style="text-decoration: line-through; color: #aaa;">@item.YapilacakIs</td>

                                        <td><span class="badge bg-success rounded-pill">Tamamlandı</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">Henüz tamamlanmış görev yok.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>

</body>
</html>