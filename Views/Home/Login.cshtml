@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #fdfbf7;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 400px;
            border: 1px solid #f0f0f0;
        }

        .btn-soft {
            background-color: #a8d8ea;
            color: #444;
            border: none;
            padding: 12px;
            border-radius: 20px;
            font-weight: bold;
            width: 100%;
            transition: all 0.3s;
        }

            .btn-soft:hover {
                background-color: #92cce0;
                transform: scale(1.02);
            }

        .form-control {
            background-color: #f7f9fc;
            border: none;
            border-radius: 15px;
            padding: 15px;
            margin-bottom: 15px;
        }

        a {
            text-decoration: none;
            color: #a8d8ea;
            font-weight: bold;
            transition: color 0.3s;
        }

            a:hover {
                color: #76b5c5;
            }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <h3 class="mb-4" style="color:#666;">Hoş Geldiniz 🌸</h3>

        @if (TempData["Basarili"] != null)
        {
            <div class="alert alert-success">@TempData["Basarili"]</div>
        }
        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form asp-action="Login" method="post">
            <input type="text" name="adSoyad" class="form-control" placeholder="Kullanıcı Adı" required />
            <input type="password" name="sifre" class="form-control" placeholder="Şifre" required />

            <button type="submit" class="btn btn-soft">Giriş Yap</button>

            <div class="mt-4 d-flex justify-content-between small">
                <a href="/Home/Register">Kayıt Ol</a>
                <a href="/Home/ForgotPassword" style="color:#ffb7b2;">Şifremi Unuttum</a>
            </div>
        </form>
    </div>
</body>
</html>