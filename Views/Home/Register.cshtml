@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #fdfbf7;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 400px;
            border: 1px solid #f0f0f0;
        }

        .btn-soft {
            background-color: #aa96da;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 20px;
            font-weight: bold;
            width: 100%;
            transition: all 0.3s;
        }

            .btn-soft:hover {
                background-color: #957dad;
                transform: scale(1.02);
            }

        .form-control, .form-select {
            background-color: #f7f9fc;
            border: none;
            border-radius: 15px;
            padding: 15px;
            margin-bottom: 15px;
        }

        a {
            text-decoration: none;
            color: #aa96da;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <h3 class="mb-4" style="color:#666;">Yeni Hesap ✨</h3>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form asp-action="Register" method="post" autocomplete="off">
            <input type="text" name="Username" class="form-control" placeholder="Kullanıcı Adı Belirle" required autocomplete="off" />

            <input type="password" name="Password" class="form-control" placeholder="Şifre Belirle" required autocomplete="new-password" />

            <select name="SecurityQuestion" class="form-select" required>
                <option value="" disabled selected>Güvenlik Sorusu Seç</option>
                <option value="En sevdiğin yemek?">En sevdiğin yemek?</option>
                <option value="İlkokul öğretmeninin adı?">İlkokul öğretmeninin adı?</option>
                <option value="İlk evcil hayvanının adı?">İlk evcil hayvanının adı?</option>
                <option value="Hangi şehirde doğdun?">Hangi şehirde doğdun?</option>
            </select>

            <input type="text" name="SecurityAnswer" class="form-control" placeholder="Cevabın (Unutma!)" required autocomplete="off" />

            <button type="submit" class="btn btn-soft">Kayıt Ol</button>

            <p class="mt-3 text-muted small">
                Zaten hesabın var mı? <a href="/Home/Login">Giriş Yap</a>
            </p>
        </form>
    </div>
</body>
</html>