@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Yeni Şifre Belirle</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap');
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #fdfbf7;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 400px;
            border: 1px solid #f0f0f0;
        }

        .btn-success-soft {
            background-color: #95e1d3;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 20px;
            font-weight: bold;
            width: 100%;
            transition: all 0.3s;
        }

            .btn-success-soft:hover {
                background-color: #66d2c0;
                transform: scale(1.02);
            }

        .form-control {
            background-color: #f7f9fc;
            border: none;
            border-radius: 15px;
            padding: 15px;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <h3 class="mb-4" style="color:#666;">Şifreyi Yenile 🔑</h3>
        <p class="text-muted small">Harika! Kimliğin doğrulandı. Şimdi yeni şifreni belirle.</p>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" name="username" value="@ViewBag.Username" />

            <input type="password" name="newPassword" class="form-control" placeholder="Yeni Şifre" required />
            <input type="password" name="confirmPassword" class="form-control" placeholder="Yeni Şifre (Tekrar)" required />

            <button type="submit" class="btn btn-success-soft">Şifreyi Kaydet</button>
        </form>
    </div>
</body>
</html>